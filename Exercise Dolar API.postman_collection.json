    {
      "name": "CotacaoDolarPeriodo",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "//  1. Teste básico de status\r",
              "pm.test(\"Status 200 - Periodo\", function () {\r",
              "    pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "//  2. Ler e preparar o corpo\r",
              "const body = pm.response.text().trim();\r",
              "const linhas = body.split(\"\\n\").map(l => l.trim()).filter(l => l.length > 0);\r",
              "\r",
              "// Primeira linha é o cabeçalho\r",
              "pm.test(\"Retornou múltiplos dias\", function () {\r",
              "    pm.expect(linhas.length, \"Quantidade de linhas (inclui cabeçalho)\").to.be.above(2);\r",
              "});\r",
              "\r",
              "//  3. Função auxiliar para extrair a cotação de venda\r",
              "function extrairVenda(linha, indexLinha) {\r",
              "    // Exemplo de linha:\r",
              "    // \"4,1482\",\"4,1488\",2019-10-15 13:09:38.123\r",
              "\r",
              "    // Quebrar por vírgula\r",
              "    const partes = linha.split(\",\");\r",
              "\r",
              "    // Precisamos pelo menos de 4 partes: \"4 , 1482\" , \"4 , 1488\"\r",
              "    if (partes.length < 4) {\r",
              "        throw new Error(`Linha ${indexLinha} mal formatada (partes < 4): \"${linha}\"`);\r",
              "    }\r",
              "\r",
              "    // venda é composta pelas partes 2 e 3 (índices 2 e 3)\r",
              "    let vendaStr = partes[2] + \",\" + partes[3];\r",
              "\r",
              "    // Remover aspas duplas\r",
              "    vendaStr = vendaStr.replace(/\"/g, \"\");\r",
              "\r",
              "    // Trocar vírgula decimal por ponto\r",
              "    vendaStr = vendaStr.replace(\",\", \".\");\r",
              "\r",
              "    const venda = parseFloat(vendaStr);\r",
              "\r",
              "    if (isNaN(venda)) {\r",
              "        throw new Error(`Linha ${indexLinha} possui valor de venda inválido: \"${vendaStr}\" (linha completa: \"${linha}\")`);\r",
              "    }\r",
              "\r",
              "    return venda;\r",
              "}\r",
              "\r",
              "//  4. Percorrer linhas de dados e coletar valores de venda\r",
              "let valoresVenda = [];\r",
              "\r",
              "for (let i = 1; i < linhas.length; i++) { // começa em 1 para pular o cabeçalho\r",
              "    const linha = linhas[i];\r",
              "\r",
              "    const venda = extrairVenda(linha, i);\r",
              "\r",
              "    // Teste por linha: valor não-negativo\r",
              "    pm.test(`Valor de venda válido na linha ${i}`, function () {\r",
              "        pm.expect(venda, `Valor de venda na linha ${i}`).to.be.at.least(0);\r",
              "    });\r",
              "\r",
              "    valoresVenda.push(venda);\r",
              "}\r",
              "\r",
              "// Garantir que temos pelo menos 2 valores para comparar tendência\r",
              "pm.test(\"Existe histórico suficiente de valores de venda\", function () {\r",
              "    pm.expect(valoresVenda.length, \"Quantidade de registros de venda\").to.be.at.least(2);\r",
              "});\r",
              "\r",
              "//  5. Cálculo de variação e tendência\r",
              "const primeiro = valoresVenda[0];\r",
              "const ultimo = valoresVenda[valoresVenda.length - 1];\r",
              "\r",
              "const variacao = ((ultimo - primeiro) / primeiro) * 100;\r",
              "\r",
              "// Logs úteis (aparecem no console do Postman)\r",
              "console.log(\"Primeiro:\", primeiro);\r",
              "console.log(\"Último:\", ultimo);\r",
              "console.log(\"Variação %:\", variacao.toFixed(2));\r",
              "\r",
              "//  TESTE PRINCIPAL DE NEGÓCIO: tendência\r",
              "pm.test(\"Sistema identifica tendência corretamente\", function () {\r",
              "\r",
              "    if (ultimo > primeiro) {\r",
              "        console.log(\"TENDÊNCIA DE ALTA\");\r",
              "        pm.expect(ultimo, \"Último valor deve ser maior que o primeiro\").to.be.above(primeiro);\r",
              "\r",
              "    } else if (ultimo < primeiro) {\r",
              "        console.log(\"TENDÊNCIA DE QUEDA\");\r",
              "        pm.expect(ultimo, \"Último valor deve ser menor que o primeiro\").to.be.below(primeiro);\r",
              "\r",
              "    } else {\r",
              "        console.log(\"SEM VARIAÇÃO\");\r",
              "        pm.expect(ultimo, \"Último valor deve ser igual ao primeiro\").to.eql(primeiro);\r",
              "    }\r",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
