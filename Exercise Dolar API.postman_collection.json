    {
      "name": "CotacaoDolar",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Testa se o status HTTP da resposta é 200 (OK)",
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "// Só executa as próximas validações se o status for 200",
              "if (pm.response.code === 200) {",
              "",
              "    // Obtém o corpo da resposta como texto e remove espaços extras no início e fim",
              "    const responseText = pm.response.text().trim();",
              "",
              "    // Verifica se o corpo da resposta não está vazio",
              "    pm.test(\"Response body is not empty\", function () {",
              "        pm.expect(responseText).to.not.be.empty;",
              "    });",
              "",
              "    // Divide o conteúdo em linhas usando a quebra de linha",
              "    const lines = responseText.split(\"\\n\");",
              "",
              "    // ==============================",
              "    // VALIDAÇÃO: erro quando só vem o cabeçalho",
              "    // ==============================",
              "    pm.test(\"Resposta não deve conter apenas o cabeçalho\", function () {",
              "",
              "        // Caso 1: resposta contém exatamente o texto do cabeçalho (sem quebra de linha)",
              "        const apenasCabecalhoSemQuebra = ",
              "            responseText === \"cotacaoCompra,cotacaoVenda,dataHoraCotacao\";",
              "",
              "        // Caso 2: existe apenas 1 linha e ela é igual ao cabeçalho",
              "        const apenasCabecalhoUmaLinha = (",
              "            lines.length === 1 &&",
              "            lines[0] === \"cotacaoCompra,cotacaoVenda,dataHoraCotacao\"",
              "        );",
              "",
              "        // Se qualquer um dos casos for verdadeiro, o teste deve falhar",
              "        pm.expect(",
              "            apenasCabecalhoSemQuebra || apenasCabecalhoUmaLinha,",
              "            \"API retornou apenas o cabeçalho, sem dados de cotação\"",
              "        ).to.be.false;",
              "    });",
              "",
              "    // Garante que existam pelo menos 2 linhas (cabeçalho + pelo menos 1 linha de dados)",
              "    pm.test(\"Response has at least 2 lines (header + data)\", function () {",
              "        pm.expect(lines.length).to.be.at.least(2);",
              "    });",
              "",
              "    // Só continua se realmente houver pelo menos 2 linhas",
              "    if (lines.length >= 2) {",
              "",
              "        // Pega a segunda linha (primeira linha de dados)",
              "        const dataRow = lines[1];",
              "",
              "        // Extrai todos os valores entre aspas usando regex",
              "        const matches = dataRow.match(/\"([^\"]*)\"/g);",
              "",
              "        // Verifica se a linha contém valores entre aspas",
              "        pm.test(\"Data row contains quoted values\", function () {",
              "            pm.expect(matches).to.not.be.null;",
              "            pm.expect(matches.length).to.be.at.least(2);",
              "        });",
              "",
              "        // Só continua se encontrou pelo menos dois valores (compra e venda)",
              "        if (matches && matches.length >= 2) {",
              "",
              "            // Remove as aspas dos dois primeiros valores",
              "            const cotacaoCompraStr = matches[0].replace(/\"/g, \"\");",
              "            const cotacaoVendaStr = matches[1].replace(/\"/g, \"\");",
              "",
              "            // Verifica se os valores não estão vazios",
              "            pm.test(\"cotacaoCompra string is not empty\", function () {",
              "                pm.expect(cotacaoCompraStr).to.not.be.empty;",
              "            });",
              "",
              "            pm.test(\"cotacaoVenda string is not empty\", function () {",
              "                pm.expect(cotacaoVendaStr).to.not.be.empty;",
              "            });",
              "",
              "            // Converte os valores para número (substitui vírgula por ponto para parseFloat funcionar)",
              "            const cotacaoCompra = parseFloat(cotacaoCompraStr.replace(\",\", \".\"));",
              "            const cotacaoVenda = parseFloat(cotacaoVendaStr.replace(\",\", \".\"));",
              "",
              "            // Verifica se os valores convertidos são números válidos",
              "            pm.test(\"cotacaoCompra is a valid number\", function () {",
              "                pm.expect(isNaN(cotacaoCompra)).to.be.false;",
              "            });",
              "",
              "            pm.test(\"cotacaoVenda is a valid number\", function () {",
              "                pm.expect(isNaN(cotacaoVenda)).to.be.false;",
              "            });",
              "",
              "            // Verifica se os valores são maiores que zero",
              "            pm.test(\"cotacaoCompra é positivo\", function () {",
              "                pm.expect(cotacaoCompra).to.be.above(0);",
              "            });",
              "",
              "            pm.test(\"cotacaoVenda é positivo\", function () {",
              "                pm.expect(cotacaoVenda).to.be.above(0);",
              "            });",
              "        }",
              "    }",
              "}",
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
